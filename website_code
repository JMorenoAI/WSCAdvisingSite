      <script>
        function menutoggle() {
    var menuItems = document.getElementById(&#39;MenuItems&#39;);
    if (menuItems.style.display === &#39;block&#39;) {
        menuItems.style.display = &#39;none&#39;;
    } else {
        menuItems.style.display = &#39;block&#39;;
    }
}
